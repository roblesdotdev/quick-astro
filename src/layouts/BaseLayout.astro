---
import BaseHead from '~/components/shared/BaseHead.astro'
import '~/styles/global.css'

interface Props {
  title?: string
  description?: string
  keywords?: string
  image?: string
}

const { title, description, keywords, image } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      keywords={keywords}
      image={image}
    />
  </head>
  <body>
    <main class="mx-auto max-w-2xl px-4 py-8">
      <slot />
    </main>
  </body>
</html>
